<?xml version="1.0" encoding="utf-8"?>
<!--moon: https://www.pinterest.ca/pin/675610381577562913/-->
<!--earth: https://en.wikipedia.org/wiki/File:Earth_Western_Hemisphere_transparent_background.png-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/space"
    android:layout_height="fill_parent">
  <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/white"
      android:textSize="20dp"
      android:text="@string/tween"
      android:textStyle="bold"/>
  <LinearLayout
      android:id="@+id/ButtonRow"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <Button
        android:id="@+id/ButtonScale"
        android:layout_width="82dp"
        android:layout_height="wrap_content"

        android:text="Grow"></Button>

    <Button
        android:id="@+id/ButtonTranslate"
        android:layout_width="82dp"
        android:layout_height="wrap_content"

        android:text="Move"></Button>

    <Button
        android:id="@+id/ButtonRotate"
        android:layout_width="82dp"
        android:layout_height="wrap_content"

        android:text="Spin"></Button>

    <Button
        android:id="@+id/ButtonAll"
        android:layout_width="82dp"
        android:layout_height="wrap_content"

        android:text="All"></Button>

    <Button
        android:id="@+id/ButtonStop"
        android:layout_width="82dp"
        android:layout_height="wrap_content"

        android:text="Stop">


    </Button>
  </LinearLayout>
  <LinearLayout
      android:id="@+id/LinearLayout01"
      android:layout_height="fill_parent"
      android:layout_width="fill_parent"
      android:orientation="vertical"
      android:layout_gravity="center_vertical|center_horizontal">

    <ImageView
        android:id="@+id/blank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:minWidth="90px"
        android:minHeight="90px"
        android:layout_marginLeft="150dp">
    </ImageView>

    <ImageView
        android:id="@+id/blank2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:minWidth="90px"
        android:minHeight="90px"
        android:layout_marginLeft="150dp">
    </ImageView>

    <ImageView
        android:id="@+id/blank3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:minWidth="90px"
        android:minHeight="90px"
        android:layout_marginLeft="150dp">
    </ImageView>

    <ImageView
        android:id="@+id/moon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/moon"
        android:minWidth="90px"
        android:minHeight="90px"
        android:layout_marginLeft="150dp">

    </ImageView>




    <ImageView
        android:id="@+id/blank4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:minWidth="90px"
        android:minHeight="90px"
        android:layout_marginLeft="150dp">
    </ImageView>

    <ImageView
        android:id="@+id/blank5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:minWidth="90px"
        android:minHeight="90px"
        android:layout_marginLeft="150dp">
    </ImageView>





    <ImageView
        android:id="@+id/earth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/earth"
        android:minWidth="90px"
        android:minHeight="90px"
        android:layout_marginLeft="55dp">

    </ImageView>
  </LinearLayout>


</LinearLayout>